#include <iostream>
using namespace std;
#include "Fecha.h"
#include "Persona.h"

int main() {
Fecha fe(1,1,1980);
cout<<fe.getdia()<<" / "<<fe.getmes()<<" / "<<fe.getanho()<<endl;
cout << fe.toString() << endl;
int op;
Persona per;
per.input();
cout<<"1: ingresar mas personas "<<endl;
cout<<"2: salir "<<endl<<endl;
cout<<"Seleccione una opcion: "<<endl;
cin>>op;
while(op == 1){
switch(op){
case 1 :
per.aniadir();
break;
case 2:
	cout<<"finalizado...";
break;
}
}

}
